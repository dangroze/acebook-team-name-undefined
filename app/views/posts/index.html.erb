<section class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <p>
        <%= post.message %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete', post_path(post), method: :delete, data: {
              confirm: "Are you sure?"
            } %>
      </p>
    </div>
  <% end %>

  <%= link_to new_post_path, class: "button" do %>
    New post
  <% end %>
</section>
